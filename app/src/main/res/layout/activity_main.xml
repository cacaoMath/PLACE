<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/start_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorDefault"
        android:scaleType="fitXY"
        android:text="@string/startBtn"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vocabulary_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="152dp"
        android:background="@color/colorDefault"
        android:scaleType="fitXY"
        android:text="@string/vocabBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remember_btn"
        app:layout_constraintVertical_bias="0.969" />

    <Button
        android:id="@+id/config_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="160dp"
        android:background="@color/colorDefault"
        android:scaleType="fitXY"
        android:text="@string/configBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toEndOf="@+id/vocabulary_btn"
        app:layout_constraintTop_toBottomOf="@+id/unknown_btn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/remember_btn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:background="@color/colorDefault"
        android:scaleType="fitXY"
        android:text="@string/rememberBtn"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/unknown_btn"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unknown_btn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="44dp"
        android:background="@color/colorDefault"
        android:scaleType="fitXY"
        android:text="@string/unknownBtn"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/meta_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Metadata"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>